<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="siswadi.com.check.IngredientFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton_ingredientFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            app:fabSize ="normal"
            android:src="@drawable/ic_check_black_24dp"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/ingredientImageView_ingredientFragment"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#A8AAAB"/>

        <EditText
            android:id="@+id/ingredientNameEditText_ingredientFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chilli Pepper"
            app:layout_constraintBottom_toBottomOf="@+id/ingredientImageView_ingredientFragment"
            app:layout_constraintLeft_toLeftOf="@+id/ingredientImageView_ingredientFragment"
            android:layout_marginLeft="8dp"
            android:textStyle="normal"
            android:textSize="30sp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:background="@color/transparent"/>
        <LinearLayout
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/ingredientImageView_ingredientFragment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:id="@+id/linearLayout_ingredientFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="AMOUNT"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:background="@color/white"
                    android:textColor="#C9737D"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/amountEditText_ingredientFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3 litres"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:background="@color/white"
                    android:textColor="#C9737D"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="EXPIRY DATE"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:background="@color/white"
                    android:textColor="#C9737D"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/expiryDateEditText_ingredientFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="05/04/1997"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:background="@color/white"
                    android:textColor="#C9737D"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="LOCATION"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:background="@color/white"
                    android:textColor="#C9737D"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/locationEditText_ingredientFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pantry"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:background="@color/white"
                    android:textColor="#C9737D"/>
            </LinearLayout>

        </LinearLayout>

        <CheckBox
            app:layout_constraintRight_toRightOf="@id/ingredientImageView_ingredientFragment"
            app:layout_constraintBottom_toBottomOf="@id/ingredientImageView_ingredientFragment"
            android:id="@+id/checkBox_ingredientFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Stock"
            tools:layout_editor_absoluteX="273dp"
            tools:layout_editor_absoluteY="105dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="8dp"
            android:buttonTint="@color/pink"
            android:textColor="@color/white"/>

    </android.support.constraint.ConstraintLayout>


</FrameLayout>
