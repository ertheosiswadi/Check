<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="#FF9DC2"
    android:padding="20dp">

    <ImageView
        android:id="@+id/drawerProfilePicture"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/sample_photo"/>
    <TextView
        android:id="@+id/drawerUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ertheo Siswadi"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/drawerEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mario.bros263@gmail.com"
        android:textColor="@color/white"/>

</LinearLayout>